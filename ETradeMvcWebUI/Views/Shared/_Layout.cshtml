@using System
@using System.Security.Policy
@using ETradeEntities.Entities
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - E-Trade</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*<i class="fa fa-home fa-lg" style="color: white; margin-top: 15px;"></i>*@
                @*@Html.ActionLink("Products Home", "Index", "Products", new { area = "" }, new { @class = "navbar-brand" })*@
                <div style="padding-top: 15px;">
                    <a href="@Url.Action("Index", "Products")" style="color: white;"><i class="fa fa-home fa-lg"></i> Products Home</a>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("List", "ProductsAjax")">Products (AJAX)</a></li>
                    <li><a href="@Url.Action("Json", "Products")">Products (JSON)</a></li>
                    <li><a href="@Url.Action("Index", "Cart")">Cart</a></li>
                    <li><a href="@Url.Action("Index", "Categories")">Categories</a></li>
                </ul>

                <div style="padding-top: 15px; width: 800px;">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a style="color: yellow;" href="@Url.Action("Login", "Account")">Login</a>
                    }
                    else
                    {
                        <span style="color: yellow;">Welcome @User.Identity.Name</span>
                        @:&nbsp;
                        <a style="color: yellow;" href="@Url.Action("Logout", "Account")">Logout</a>
                    }
                </div>

            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mert KANDEMİR</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Plugins/bootstrap-datepicker/locales/bootstrap-datepicker.tr.min.js"></script>

    @RenderSection("Scripts", false)

</body>
</html>